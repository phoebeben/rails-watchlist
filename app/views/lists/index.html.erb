<h1 class="text-center">My Movie Lists</h1>

<div class="banner">
  <div class="container">
  </div>
</div>

<% @lists.each do |list| %>

<div class="grid">
  <div class="d-flex flex-lg-row justify-content-center">
    <div class="card">
      <ul>
        <li><%= link_to list.name, list_path(list) %></li>
      </ul>
    </div>
    <% end %>
  </div>
  <div class="row m-auto">
    <p><%= link_to "Create a new list", new_list_path %></p>
  </div>
</div>
